          ul 
            text-align: right
            li
              display: inline
      p
        font-weight: 300;
        line-height: 1.5em;
        font-size: 1.1rem;
  .externe
      position: absolute;
      left: -5000px;
      width: 4000px;
  a
    &:hover
       text-decoration: underline
  .form-group
    &::after
      clear: both
    &::before, &::after
      content " "
      display table
    label
      text-align right
  .form-group:nth-child(1)
        position absolute
        top -2em
        left 0
  footer
    h5
        font-size: 14px;
        margin: 26px 0 10px;
        font-weight: 700;
        text-transform: uppercase;
    font-size: 85%;
    padding: 1em;
    color: #FFF;
    background-color: #26353f;
    text-shadow: none;
    .logo
        width 150px
        height 70px
    ul
        padding: 0;
        list-style: none;
        line-height: 1.78em;
    li
        list-style-type: none;
        text-align: left
        a
          margin-left: .5em
          color: white
