      height: 100%
      margin-bottom: 220px;
      padding-top: 45px;
      font: 14px "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif
      .left
        float:left
      .strong
        font-weight: bold
      header
        padding: 1em
        font-size: 18px
